#include<stdio.h>
#include<stdlib.h>
#include<time.h>

    int main ()
    {

        int numerosASeremLidos;
        int cont = 0;
        int somatório;
        int numeroLido;

        printf("Quantos números você quer que eu leia? ");
        scanf("%d",&numerosASeremLidos);

        while(cont<numerosASeremLidos)
        {
            printf("Diga mais um número: ");
            scanf("%d",&numeroLido);
            
            somatório+=numeroLido;
            cont ++;
        }

        printf("O somatório dos teus números é %d",somatório);

        return 0;

    }

#include<stdio.h>

int main ()
{
    int minutos, segundos;

    printf("Digite uma quantidade de tempo em minutos "); //Pede a quantidade de minutos
    scanf("%d",&minutos); //Lê e armazena a informação

    segundos = minutos*60; //Faz o cálculo

    printf("%d minutos é igual a %d segundos",minutos,segundos);


    return 0;
}

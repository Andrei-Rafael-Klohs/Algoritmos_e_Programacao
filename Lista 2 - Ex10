#include<stdio.h>

int main()
{
    int camisetas, calcas, cintos, valor_compra, valor_descontado;

    //Coleta os dados
    printf("Quantas camisetas foram compradas? ");
    scanf("%d",&camisetas);

    printf("Quantas calças foram compradas? ");
    scanf("%d",&calcas);

    printf("Quantos cintos foram comprados? ");
    scanf("%d",&cintos);

    //Processamento 
    valor_compra = (camisetas*25) + (calcas*100) + (cintos*40);
    valor_descontado = valor_compra*0.90;

    //Mostra os resultados      
    printf("O valor da compra foi de %d reais\n",valor_compra);
    printf("O valor com desconto fica %d reais",valor_descontado);

     return 0;
}

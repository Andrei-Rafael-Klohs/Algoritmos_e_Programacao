#include<stdio.h>

int main()
{
    int passaros, racao_necessaria;

    //Coleta os dados
    printf("Quantos passáros você possui? ");
    scanf("%d",&passaros);

    racao_necessaria = passaros*30;

    printf("Você precisa de %d gramas de ração por dia",racao_necessaria);
    
    
    return 0;
}

#include<stdio.h>

int main()
{
    float salario, desconto;

    //Informe o salário
    printf("Informe o valor do seu salário: ");
    scanf("%f",&salario);

    //Valor do desconto, verificar se é maior ou menor que 318.20
    if(salario*0.11<318.20)
    {
        desconto = salario*0.11;

    }  
    else
    {
        desconto= 318.20;
    }

         printf("O valor do seu desconto é de R$ %f",desconto);

    return 0;

}
